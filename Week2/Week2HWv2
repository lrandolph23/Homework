const pizzaPlace = "Funion";
const numberOfToppings = 7;
console.log(pizzaPlace + ", " + typeof pizzaPlace + ", " + numberOfToppings + ", " + typeof numberOfToppings);
console.log(`${pizzaPlace} is a 21+ pizza joint that offers ${numberOfToppings} toppings.`)
if (numberOfToppings < 10) {
  console.log("Quality, not quantity.");
} else {
  console.log("A whole lot of pizza.");
}
for (let i = 1; i <= numberOfToppings; i++) {
  if (i % 2 === 0) {
  console.log(i);
  }
}
